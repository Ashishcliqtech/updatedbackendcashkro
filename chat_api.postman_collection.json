{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
		"name": "Chat API - Updated",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Conversations",
			"item": [
				{
					"name": "Get User's Conversations",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/chat/conversations",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"conversations"
							]
						}
					},
					"response": []
				},
				{
					"name": "Start a New Conversation",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{
    "recipientId": "{{adminId}}"
}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/chat/conversations",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"conversations"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Messages",
			"item": [
				{
					"name": "Get Conversation Messages",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/chat/conversations/{{conversationId}}/messages",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"conversations",
								"{{conversationId}}",
								"messages"
							]
						}
					},
					"response": []
				},
				{
					"name": "Send a Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{
    "message": "Hello, this is a test message."
}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/chat/conversations/{{conversationId}}/messages",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"conversations",
								"{{conversationId}}",
								"messages"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}