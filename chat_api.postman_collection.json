{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
		"name": "Chat API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Chat",
			"item": [
				{
					"name": "Start Chat with User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{
    "adminId": "{{adminId}}",
    "userId": "{{userId}}"
}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/chat/start",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"admin",
								"chat",
								"start"
							]
						}
					},
					"response": []
				},
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{
    "sender": "{{userId}}",
    "receiver": "{{adminId}}",
    "message": "Hello, I have a question."
}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/chat/send",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"send"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Conversations",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/chat/conversations/{{userId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"conversations",
								"{{userId}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Messages",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{user_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/chat/messages/{{conversationId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"chat",
								"messages",
								"{{conversationId}}"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}